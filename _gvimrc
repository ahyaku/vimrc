let g:lightline = {
  \ 'colorscheme': 'Tomorrow_Night_Blue',
  \ }

hi LineNr guifg=LightRed
hi CursorLineNr guifg=Green guibg=Black
hi MatchParen gui=underline,bold,reverse guisp=Red guibg=NONE guifg=NONE
